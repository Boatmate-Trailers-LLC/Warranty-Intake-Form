            <div class="field">
              <label for="vin">Trailer VIN</label>
              <input
                id="vin"
                name="vin"
                type="text"
                maxlength="17"
                pattern="[A-HJ-NPR-Z0-9]{17}"
                autocomplete="off"
                spellcheck="false"
                required
              />
            </div>

            <div class="field">
              <label for="date_of_occurrence">Date of Occurrence</label>
