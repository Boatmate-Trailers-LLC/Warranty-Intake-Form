              <textarea id="warranty_symptoms" name="warranty_symptoms" rows="5" required></textarea>
            </div>

            <div class="field">
              <label for="warranty_request">Warranty Request</label>
              <textarea id="warranty_request" name="warranty_request" rows="5" required></textarea>
            </div>

            <!-- Row 3 -->
            <div class="field">
              <label for="labor_hours">Warranty Labor Hours</label>
              <input id="labor_hours" name="labor_hours" type="text" inputmode="decimal" />
            </div>

            <div class="field">
              <label for="attachments">File Upload</label>
              <input id="attachments" name="attachments" type="file" multiple />
              <small>Up to 10 files. Max 10MB each.</small>
            </div>
          </div>
        </fieldset>

        <!-- Actions / Status -->
        <div class="bm-actions">
          <button id="submit-btn" type="submit">
            <span class="btn-label">Submit Warranty Claim</span>
            <span class="bm-spinner" aria-hidden="true"></span>
          </button>

          <span id="form-status" aria-live="polite"></span>
        </div>
      </form>
    </div>

    <script>
      /**
       * Dealer Warranty Intake — Front-end Script
       * ----------------------------------------
       * Responsibilities:
       * - Client-side validation (required fields, VIN format, file limits)
       * - Submit multipart/form-data to the Worker endpoint
       * - Display success/error status + claim number
       * - Prevent double submits; show loading state
       *
       * NOTE: The backend remains the source of truth for validation.
       */
      (() => {
        // ---------------------------------------------------------------------
        // Config
        // ---------------------------------------------------------------------
        const WARRANTY_ENDPOINT = 'https://warranty-intake-form.boatmate-trailers-llc.workers.dev/';

        // File limits should match (or be <=) backend enforcement.
        const MAX_FILES = 10;
        const MAX_FILE_BYTES = 10 * 1024 * 1024; // 10MB

        // ---------------------------------------------------------------------
        // DOM References
        // ---------------------------------------------------------------------
        const form = document.getElementById('warranty-form');
        const statusEl = document.getElementById('form-status');
        const submitBtn = document.getElementById('submit-btn');
        const btnLabel = submitBtn?.querySelector('.btn-label');

        // IDs that must exist and be non-empty for a valid dealer submission.
        const REQUIRED_IDS = [
          // Dealer
          'dealer_name',
          'dealer_first_name',
          'dealer_last_name',
          'dealer_address',
          'dealer_city',
          'dealer_region',
          'dealer_postal_code',
          'dealer_country',
          'dealer_phone',
          'dealer_email',

          // Customer (name only)
          'customer_first_name',
          'customer_last_name',

          // Claim
          'vin',
          'date_of_occurrence',
          'warranty_symptoms',
          'warranty_request'
        ];

        // ---------------------------------------------------------------------
        // Small Helpers
        // ---------------------------------------------------------------------
        function setStatus(message, ok = true) {
          if (!statusEl) return;
          statusEl.textContent = message || '';
          statusEl.className = ok ? 'success' : 'error';
        }

        function setSubmitting(isSubmitting) {
          if (!submitBtn) return;

          submitBtn.disabled = isSubmitting;
          submitBtn.classList.toggle('is-loading', isSubmitting);
          form.setAttribute('aria-busy', isSubmitting ? 'true' : 'false');

          // IMPORTANT: Don’t use submitBtn.textContent here (it would remove the spinner span).
          if (btnLabel) {
            btnLabel.textContent = isSubmitting ? 'Submitting…' : 'Submit Warranty Claim';
          }
        }

        function markInvalid(id) {
          const el = document.getElementById(id);
          if (el) el.classList.add('bm-invalid');
        }

        function clearInvalid() {
          REQUIRED_IDS.forEach((id) => {
            const el = document.getElementById(id);
            if (el) el.classList.remove('bm-invalid');
          });
        }

        // VIN format check only (no checksum)
        function isValidVin(vin) {
          return /^[A-HJ-NPR-Z0-9]{17}$/.test(String(vin || '').trim().toUpperCase());
        }

        function validateFiles(fileInput) {
          const files = fileInput?.files ? Array.from(fileInput.files) : [];

          if (files.length > MAX_FILES) {
            return `Too many attachments. Maximum is ${MAX_FILES} files per submission.`;
          }

          for (const f of files) {
            if (f.size > MAX_FILE_BYTES) {
              return `Attachment "${f.name}" is too large. Maximum size is 10MB per file.`;
            }
          }

          return null;
        }

        // Lightweight per-field UX: remove red outline once the user edits/fixes a field.
        function wireFieldValidation() {
          REQUIRED_IDS.forEach((id) => {
            const el = document.getElementById(id);
            if (!el) return;

            const handler = () => {
              const val = String(el.value || '').trim();
              if (val) el.classList.remove('bm-invalid');
            };

            el.addEventListener('input', handler);
            el.addEventListener('change', handler);
            el.addEventListener('blur', handler);
          });
        }

        // ---------------------------------------------------------------------
        // Submit Handler
        // ---------------------------------------------------------------------
        async function handleSubmit(e) {
          e.preventDefault();
          setStatus('');
          clearInvalid();

          // Normalize VIN to uppercase before validation + submission
          const vinEl = document.getElementById('vin');
          if (vinEl) vinEl.value = String(vinEl.value || '').trim().toUpperCase();

          const errors = [];

          // Required field validation
          for (const id of REQUIRED_IDS) {
            const el = document.getElementById(id);
            const val = el ? String(el.value || '').trim() : '';

            if (!val) {
              errors.push(`${id} is required.`);
              markInvalid(id);
            }
          }

          // VIN format validation
          if (vinEl && vinEl.value && !isValidVin(vinEl.value)) {
            errors.push('VIN must be 17 characters (no I, O, Q).');
            markInvalid('vin');
          }

          // Attachment validation
          const fileInput = document.getElementById('attachments');
          const fileErr = validateFiles(fileInput);
          if (fileErr) errors.push(fileErr);

          if (errors.length) {
            // Only show the first error to keep UX clean
            setStatus(errors[0], false);
            return;
          }

          // Build the multipart/form-data payload from the form
          const formData = new FormData(form);

          setSubmitting(true);

          try {
            const resp = await fetch(WARRANTY_ENDPOINT, { method: 'POST', body: formData });

            // Worker should return JSON; fall back safely if it doesn’t.
            const data = await resp.json().catch(() => null);

            if (!resp.ok || !data || data.ok !== true) {
              const msg =
                (data && (data.message || (Array.isArray(data.errors) ? data.errors.join(' ') : ''))) ||
                `Submission failed (HTTP ${resp.status}).`;
              setStatus(msg, false);
              return;
            }

            setStatus(`Submitted successfully. Claim #${data.claimNumber}.`, true);

            // Reset form for the next submission
            form.reset();

            // Re-apply fixed hidden values after reset
            const submitter = form.querySelector('input[name="claim_submitted_by"]');
            const category = form.querySelector('input[name="category"]');
            if (submitter) submitter.value = 'dealer';
            if (category) category.value = 'Warranty';
          } catch (err) {
            setStatus('Network error while submitting. Please try again.', false);
          } finally {
            setSubmitting(false);
          }
        }

        // ---------------------------------------------------------------------
        // Boot
        // ---------------------------------------------------------------------
        wireFieldValidation();
        form.addEventListener('submit', handleSubmit);
      })();
    </script>
  </body>
</html>
