        color: var(--bm-error);
      }

      /* -----------------------------------------------------------------------
        Submit Button + Spinner
      ------------------------------------------------------------------------ */
      .bm-actions {
        display: flex;
        gap: 12px;
        align-items: center;
      }

      button[type="submit"] {
        appearance: none;
